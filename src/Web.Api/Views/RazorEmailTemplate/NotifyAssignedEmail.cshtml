@model Application.Complaints.Dto.ComplaintNotificationEmailModel;
@{
	Layout = null; // No layout for email templates
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<style>
		body {
			font-family: Arial, sans-serif;
			line-height: 1.6;
			color: #333333;
			margin: 0;
			padding: 0;
		}

		.email-container {
			max-width: 600px;
			margin: 0 auto;
			padding: 20px;
		}

		.header {
			background-color: #f8f9fa;
			padding: 20px;
			border-bottom: 3px solid #0056b3;
		}

		.content {
			padding: 20px;
			background-color: #ffffff;
		}

		.footer {
			padding: 20px;
			text-align: center;
			font-size: 12px;
			color: #666666;
			background-color: #f8f9fa;
		}

		.complaint-details {
			background-color: #f8f9fa;
			padding: 15px;
			margin: 15px 0;
			border-left: 4px solid #0056b3;
		}

		.priority-high {
			color: #dc3545;
			font-weight: bold;
		}

		.priority-medium {
			color: #ffc107;
			font-weight: bold;
		}

		.priority-low {
			color: #28a745;
			font-weight: bold;
		}

		.button {
			display: inline-block;
			padding: 10px 20px;
			background-color: #0056b3;
			color: #ffffff;
			text-decoration: none;
			border-radius: 5px;
			margin-top: 15px;
		}
	</style>
</head>
<body>
	<div class="email-container">
		<div class="header">
			<h2>New Complaint Notification</h2>
			<p>Complaint ID: @Model.ComplaintId</p>
		</div>

		<div class="content">
			<p>Dear @Model.AssigneeName,</p>

			<p>A new complaint has been assigned to you. Please find the details below:</p>

			<div class="complaint-details">
				<p><strong>Complaint ID:</strong> @Model.ComplaintId</p>
				<p><strong>Date Submitted:</strong> @Model.SubmissionDate.ToString("MMMM dd, yyyy")</p>
				<p>
					<strong>Priority:</strong>
					<span class="priority-@Model.Priority.ToLowerInvariant()">
						@Model.Priority
					</span>
				</p>
				<p><strong>Complaint Type:</strong> @Model.ComplaintType</p>
				<p><strong>Submitted By:</strong> @Model.SubmittedBy</p>
				<p><strong>Contact Email:</strong> <a href="mailto:@Model.ComplainantEmail">@Model.ComplainantEmail</a></p>
				<p><strong>Contact Phone:</strong> @Model.ComplainantPhone</p>
				<p><strong>Description:</strong></p>
				<p>@Model.ComplaintDescription</p>
			</div>

			<p><strong>Required Action:</strong></p>
			<p>Please review this complaint and take appropriate action according to our standard procedures. Initial response should be provided within 12 hours.</p>

			<a href="@Model.Url" class="button" target="_blank">View Complaint Details</a>

			<p style="margin-top: 20px;">If you have any questions or need additional information, please contact the support team.</p>
		</div>

		<div class="footer">
			<p>This is an automated message. Please do not reply directly to this email.</p>
			<p>1, Moscow road</p>
			<p>&copy; @DateTime.Now.Year PHED. All rights reserved.</p>
		</div>
	</div>
</body>
</html>